<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="Marcin Zaczeniuk">

        <createTable tableName="app_user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="username" type = "VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="wallet" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="properties">
            <column name="property_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="area" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="number_of_rooms" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="tenants">
            <column name="tenant_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="post_code" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="landlords">
            <column name="landlord_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="post_code" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Dodanie klucza obcego do tabeli najemców (Tenants) łączącego z tabelą użytkowników (APP_USER) -->
    <changeSet id="add-foreign-key-to-tenant-table" author="Marcin Zaczeniuk">
        <addForeignKeyConstraint baseTableName="TENANTS"
                                 baseColumnNames="user_id"
                                 referencedTableName="APP_USER"
                                 referencedColumnNames="id"
                                 constraintName="fk_tenant_to_user_id"/>
    </changeSet>

    <!-- Dodanie klucza obcego do tabeli wynajmujacych (landlords) łączącego z tabelą użytkowników (APP_USER) -->
    <changeSet id="add-foreign-key-to-landlords-table" author="Marcin Zaczeniuk">
        <addForeignKeyConstraint baseTableName="LANDLORDS"
                                 baseColumnNames="user_id"
                                 referencedTableName="APP_USER"
                                 referencedColumnNames="id"
                                 constraintName="fk_landlord_to_user_id"/>
    </changeSet>

    <changeSet id="5" author="Marcin Zaczeniuk">
        <createTable tableName="rental_agreements">
            <column name="agreement_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="rent_amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="property_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="rental_agreements"
                                 baseColumnNames="property_id"
                                 referencedTableName="properties"
                                 referencedColumnNames="property_id"
                                 constraintName="property_fk"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="rental_agreements"
                                 baseColumnNames="tenant_id"
                                 referencedTableName="tenants"
                                 referencedColumnNames="tenant_id"
                                 constraintName="tenant_fk"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="create-payment-table" author="Marcin Zaczeniuk">
        <createTable tableName="payments">
            <column name="payment_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="payment_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="rental_agreement_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="payments"
                                 baseColumnNames="rental_agreement_id"
                                 referencedTableName="rental_agreements"
                                 referencedColumnNames="agreement_id"
                                 constraintName="fk_rental_agreement_id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="7" author="Autor">
        <createTable tableName="utilities_payments">
            <column name="payment_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="payment_date" type="DATE">
                <constraints nullable="true"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="property_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="utilities_payments"
                                 baseColumnNames="property_id"
                                 referencedTableName="properties"
                                 referencedColumnNames="property_id"
                                 constraintName="fk_property_id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>